<% if not logged_in? or not @team.users.include?(current_user) %>
	redirect_to root_path
<% else %>
<strong> <%= @team.users.include?(current_user) %> </strong>
<%= form_for_filterrific @filterrific, html: { id: 'filterrific-no-ajax-auto-submit' } do |f| %>
	<div>
		Поиск
		<%= f.text_field(
			:search_query,
			class: 'filterrific-periodically-observed'
		) %>
		<%= f.submit 'Поиск', :class => 'btn btn-primary' %>
		<%= link_to(
			'Сброс',
			reset_filterrific_url, :class => 'btn btn-primary'
		) %>
	</div>
<% end %>

<%= render(
	partial: 'teams/list'
) %>
 
<%= link_to 'Назад', team_path, :class => 'btn btn-primary' %> 

<% end %>
 
