<% if not logged_in? %>
	redirect_to root_path
<% end %>

<h1>Редактирование основной информации:</h1>
 
<%= form_with model: @user, local: true do |form| %>
 
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this user from being saved:
      </h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= form.label :lastName %><br>
    <%= form.text_field :lastName %>
  </p>
 
  <p>
    <%= form.label :firstName %><br>
    <%= form.text_field :firstName %>
  </p>
 
  <p>
    <%= form.label :fathersName %><br>
    <%= form.text_field :fathersName %>
  </p>
  
  <p>
    <%= form.label :occupation %><br>
    <%= form.radio_button(:occupation, "school") %>
    <%= form.label(:occupation_school, "Школьник") %>
    <%= form.radio_button(:occupation, "higher") %>
    <%= form.label(:occupation_higher, "Студент") %>
  </p>
 
  <p>
    <%= form.label :school %><br>
    <%= form.text_field :school %>
  </p>
 
  <p>
    <%= form.label :group %><br>
    <%= form.text_field :group %>
  </p>

  <p>
    <%= form.submit "Сохранить" , :class => 'btn btn-primary' %>
  </p>
 
<% end %>
 
<%= link_to 'Отмена', user_path, :class => 'btn btn-primary' %> 
 
