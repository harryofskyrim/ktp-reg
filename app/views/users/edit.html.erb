<h1>Редактирование профиля</h1>
 
<%= form_with model: @user, local: true do |form| %>
 
	<% if @user.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%= pluralize(@user.errors.count, "error") %> prohibited
				this user from being saved:
			</h2>
			<ul>
				<% @user.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
 
	<p>
		<%= form.label :lastName %><br>
		<%= form.text_field :lastName %>
	</p>
 
	<p>
		<%= form.label :firstName %><br>
		<%= form.text_field :firstName %>
	</p>
 
	<p>
		<%= form.label :fathersName %><br>
		<%= form.text_field :fathersName %>
	</p>
 
	<p>
		<%= form.label :email %><br>
		<%= form.text_field :email %>
	</p>
 
	<p>
		<%= form.label :born %><br>
		<%= form.date_field :born %>
	</p>
	
	<p>
		<%= form.label "Учебное заведение" %><br>
		<%= form.text_field :school %>
	</p>
	
	<p>
		<% if @user.occupation == 'school' %>
			<%= form.label "Класс" %>
		<% else %>
			<%= form.label "Группа" %>
		<% end %><br>
		<%= form.date_field :group %>
	</p>
	
	<p>
		<%= form.submit %>
	</p>
 
<% end %>
 

 
<%= link_to 'Back', events_path %> 
 
